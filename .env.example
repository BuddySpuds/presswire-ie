# PressWire.ie Environment Variables
# Copy this file to .env and fill in your values

# OpenRouter API for AI generation (get from openrouter.ai)
OPENROUTER_API_KEY=sk-or-...

# GitHub for storing PRs (optional)
GITHUB_TOKEN=ghp_...
GITHUB_OWNER=your-username
GITHUB_REPO=presswire-ie

# Stripe for payments (get from stripe.com)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# SMTP for email verification (use SendGrid, AWS SES, or Mailgun)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG...

# Optional: Redis for caching (if using Redis)
REDIS_URL=redis://localhost:6379

# Development settings
NODE_ENV=development
PORT=4000